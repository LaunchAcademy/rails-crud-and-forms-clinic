<h2>New Journal Page</h2>

<%= form_for(@journal) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :year %>
  <%= f.number_field :year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :theme %>
  <%= f.text_field :theme %>

  <%= f.submit %>
<% end %>
